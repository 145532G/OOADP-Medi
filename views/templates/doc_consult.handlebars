<link rel="stylesheet" type="text/css" href="/css/doctor_consult.css">
<script src="/javascript/doc_consult_fun.js"></script>
<div class="container">
    <h1>Patient</h1>
    <div id="accordion">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <a href="#" class="btn btn-primary">Niyu Yu Hong</a>
                </h5>
            </div>
            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body">
                    {{#if QueueUserResult.user.image}}
                    <img src="/image/user/profileImage/{{QueueUserResult.user.image}}">
                    {{/if}}
                    {{#unless QueueUserResult.user.image}}
                        <img src="/image/user/profileImage/default.png">
                    {{/unless}}
                    <p id="p_name" name = "patient_name">Name : {{QueueUserResult.user.firstName}} {{QueueUserResult.user.lastName}}</p>
                    <p id="p_consultID" name="p_consultID">A0001</p>
                    <p id="p_queueNum" name = "patient_queue_number">Queue Number: {{QueueUserResult.id}}</p>
                    <p id="p_nric" name = "patient_NIRC">NIRC : {{QueueUserResult.user.identificationNumber}}</p>
                    <form action = "/doc_consult/doc_consult" method="POST">
                        <h3>Description</h3>
                        <textarea id = "patient_description" name = "description" value="{{description}}" class = "form-group"></textarea>
                        <h3>Medicine</h3>
                        <div id = "medicine_box">
                            <input type="text" id= "input_search" onkeyup="doc_medicine_search()" placeholder="Search.." name="search">
                            <ul id = "medicine_check">
                                {{#each result}}
                                <input type="hidden" name="medicine_id" value="{{this.medicine_id}}">
                                <input type="hidden" name="medicine_name" value="{{this.medicine_name}}">
                                <li><a href="#"><input type="checkbox" name="medicine_name" id="medicine_name" value="{{this.medicine_name}}" ><label class="form-check-label" for="doxycyline">{{this.medicine_name}}</label>
                                {{/each}}
                                
                            </ul>
                        </div>
                        <button type = "submit" class="btn btn-primary">submit</button>
                    </form>

                    <button>Next patient</button>
                </div>
            </div>
        </div>
    </div>
</div>

