<link rel="stylesheet" href="/css/billPayment.css">

<div class="container">
	{{#if queues}}
	<div class="card card-body">
		<h2>
			<i class="fa fa-users" style="font-size:30px"></i> Queues</h2>
		{{#each queues}} {{#ifEquals currentQueue 'Yes'}}
		<div class="row" style="margin: auto;">
			<div class="card card-body">
				<h3 id="title">Current Queue Number</h3>
				<p id="queueNo">{{id}}</p>
				<p id="counter">Please proceed to Counter:
					<span id="counterNo">{{counterNo}}</span>
				</p>
			</div>
			{{/ifEquals}} {{#ifNotEquals currentQueue 'Yes'}}
			<div class="col-sm-4 card card-body">
				<p id="counter">
					{{id}}
				</p>
				<div class="row" style="margin: auto;">
					<div class="col-sm-12">
						<p>
							<strong>Name:</strong> {{name}}</p>
						<p>
							<strong>NRIC No:</strong> {{nric}}</p>
						<p>
							<strong>{{travelOption}} to the Middle East</strong>
						</p>
					</div>
				</div>
			</div>
			{{/ifNotEquals}} {{/each}} {{else}}
		</div>
		<div class="card card-body">
			<h2>
				<i class="fa fa-users" style="font-size:30px"></i> Queues</h2>
			<h3>No queues pending</h3>

			{{/if}}
		</div>
		<div class="card card-body">
			<p id="title">Note: Queue number may not be called in sequence.</p>
			<button id="addQueue" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseQueue" style="margin-bottom: 10px;">
				<i class="fa fa-plus-circle"></i> Add Queue Number</button>
			<a id="updateQueue" class="btn btn-info card-link" type="button" href="/queue/queueUpdate">
				<i class="fa fa-wrench"></i> Update Queue (Authorized Access Only!)</a>
			<div id="collapseQueue" class="collapse">
				<form action="" method="post">
					<div class="form-group">
						<label for="name">Enter your name: </label>
						<input type="text" class="form-control" name="name" id="name" rows="1" style="display: block;">
					</div>
					<div class="form-group">
						<label for="nric">Enter your NRIC: </label>
						<input type="text" class="form-control" name="nric" id="nric" rows="1" style="display: block;">
					</div>
					<div class="form-block">
						<label for="travelOption">Have you travelled to the Middle East at least 3 months ago?</label>
						<div class="form-check form-check-inline" style="display: inline-block;">
							<input class="form-check-input" type="radio" name="travelOption" id="travel" value="Has Travelled">
							<label class="form-check-label">Yes</label>
						</div>
						<div class="form-check form-check-inline" style="display: inline-block;">
							<input class="form-check-input" type="radio" name="travelOption" id="notravel" value="Has Not Travelled">
							<label class="form-check-label">No</label>
						</div>
					</div>
					<div class="form-inline">
						<div class="form-group">
							<button type="submit" id="Queue" class="btn btn-info">Register</button>
						</div>
						<div class="form-group">
							<button type="reset" id="Reset" class="btn btn-danger">Cancel</button>
						</div>
					</div>
			</div>
		</div>
		</form>
	</div>